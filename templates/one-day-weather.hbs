
{{!-- https://openweathermap.org/current --}}

<div class="card">
	<span class='city_name'>{{name}}</span> <br> <!-- city name -->
	{{#each weather}} {{main}} {{/each}} <br> <!-- description -->
	<span class='temperature'>{{convertTemp main.temp}}&deg; </span><br> <!-- temp farenheit -->
</div>

<div class='flex-container container-1'>
	<div class='item'>Humidity</div>
	<div class='item'>Wind</div>
	<div class='item'>Lorem</div>
</div>



